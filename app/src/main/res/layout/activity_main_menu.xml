<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.maco.clientejuegos.gui.MainMenuActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/btnLogin"
            android:onClick="login" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create account"
            android:id="@+id/btnCreateAccount"
            android:onClick="createAccount" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Records"
            android:id="@+id/btnRecords"
            android:layout_gravity="center_horizontal"
            android:onClick="records" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etIPServer"
            android:hint="IP Server"
            android:text="172.19.152.10:8080" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fijar IP"
            android:id="@+id/btnFijarIP"
            android:onClick="fijarIP" />
    </LinearLayout>
</RelativeLayout>
